<%= form_for @acesso, :html => { :class => "form-horizontal acesso" } do |f| %>

  <% if @acesso.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@acesso.errors.count, "error") %> prohibited this acesso from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @acesso.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id_acesso, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :id_acesso, :class => 'form-control' %>
    </div>
    <%=f.error_span(:id_acesso) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>
  <div class="form-group">
    <%= f.label :cliente_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:cliente_id, Cliente.all, :id, :nome, {prompt: true}, {:class => 'combobox input-large form-control'} ) %>
    </div>
    <%=f.error_span(:cliente_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                acessos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
