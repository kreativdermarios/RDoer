<%= form_for @contato, :html => { :class => "form-horizontal contato" } do |f| %>

  <% if @contato.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contato.errors.count, "error") %> prohibited this contato from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contato.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :mesage, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mesage, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mesage) %>
  </div>
  <div class="form-group">
    <%= f.label :acesso_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:acesso_id, Acesso.all, :id, :id_acesso, {prompt: true}, {:class => 'combobox input-large form-control'}) %>
    </div>
    <%=f.error_span(:acesso_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contatos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
